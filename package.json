{
  "name": "sphere-node-sdk",
  "description": "Officially supported Node.js SDK library for working with the SPHERE.IO HTTP API, with OAuth2 support.",
  "version": "2.0.0-beta.0",
  "private": false,
  "homepage": "https://github.com/sphereio/sphere-node-sdk",
  "author": "Nicola Molinari <nicola.molinari@commercetools.de>",
  "repository": {
    "type": "git",
    "url": "git://github.com/sphereio/sphere-node-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/sphereio/sphere-node-sdk/issues"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "files": [
    "dist",
    "lib",
    "src",
    "test",
    "scripts",
    "version.js",
    "LICENSE.md",
    ".nvmrc"
  ],
  "engines": {
    "node": ">=4.0"
  },
  "scripts": {
    "clean": "rimraf dist lib && mkdirp dist lib",
    "coverage": "npm run lint && ./scripts/credentials && cross-env NODE_ENV=test babel-node ./node_modules/isparta/bin/isparta cover test",
    "build": "npm run clean && npm run build:commonjs && npm run build:umd && npm run build:umd:min",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:umd": "cross-env BABEL_ENV=commonjs NODE_ENV=development webpack src/index.js dist/sphere-node-sdk.js",
    "build:umd:min": "cross-env BABEL_ENV=commonjs NODE_ENV=production webpack src/index.js dist/sphere-node-sdk.min.js",
    "lint": "./scripts/lint src test",
    "prepublish": "./scripts/version",
    "test": "./scripts/credentials && cross-env NODE_ENV=test NODE_PATH=./src babel-node test/index.js | tap-spec",
    "test:ci": "browserify -t babelify -t [ envify --NODE_ENV test ] test | tap-closer | smokestack -b firefox | tap-spec",
    "test:browser": "browserify -t babelify -t [ envify --NODE_ENV test ] test | tap-closer | smokestack -b chrome | tap-spec",
    "test:watch": "watch \"npm test\" src test -d"
  },
  "dependencies": {
    "async": "~1.5.2",
    "babel-runtime": "^6.9.2",
    "isomorphic-fetch": "~2.2.1",
    "jsondiffpatch": "emmenko/jsondiffpatch#patch-webpack",
    "lodash.flatten": "^4.2.0",
    "lodash.foreach": "^4.2.0",
    "lodash.uniq": "^4.2.1",
    "loose-envify": "^1.1.0",
    "redux": "~3.5.2",
    "redux-logger": "~2.6.1"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.9.1",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.7.5",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "coveralls": "^2.11.9",
    "cross-env": "^1.0.7",
    "cz-conventional-changelog": "^1.1.6",
    "envify": "^3.4.0",
    "eslint": "^3.6.0",
    "eslint-config-airbnb": "^11.2.0",
    "eslint-config-commercetools": "^4.0.0",
    "eslint-formatter-pretty": "^1.0.0",
    "eslint-plugin-flowtype": "^2.11.4",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-react": "^6.3.0",
    "flow-bin": "^0.32.0",
    "ghooks": "^1.2.0",
    "isparta": "^4.0.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.5.2",
    "sinon": "^1.17.3",
    "smokestack": "^3.4.1",
    "tap-closer": "^1.0.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.5.1",
    "validate-commit-msg": "^2.5.0",
    "watch": "^0.17.1",
    "webpack": "^1.13.1"
  },
  "keywords": [
    "sphere",
    "sphereio",
    "rest",
    "api",
    "sdk",
    "sync",
    "promise",
    "stream",
    "ecommerce"
  ],
  "browserify": {
    "transform": [
      "loose-envify"
    ]
  },
  "eslintConfig": {
    "extends": "commercetools",
    "plugins": [
      "flowtype"
    ],
    "rules": {
      "flowtype/define-flow-type": 1,
      "flowtype/require-parameter-type": 1,
      "flowtype/require-return-type": [
        1,
        "always",
        {
          "annotateUndefined": "never"
        }
      ],
      "flowtype/semi": 0,
      "flowtype/space-after-type-colon": [
        1,
        "always"
      ],
      "flowtype/space-before-type-colon": [
        1,
        "never"
      ],
      "flowtype/type-id-match": 0,
      "flowtype/use-flow-type": 1,
      "flowtype/valid-syntax": 1
    },
    "settings": {
      "import/resolver": {
        "node": {
          "paths": ["src/"]
        }
      },
      "flowtype": {
        "onlyFilesWithFlowAnnotation": true
      }
    }
  },
  "config": {
    "ghooks": {
      "commit-msg": "node_modules/.bin/validate-commit-msg",
      "pre-commit": "./scripts/lint-staged-files"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
